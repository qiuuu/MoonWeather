<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/google_blue">

        <ImageView
            android:id="@+id/tv_imageView"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginEnd="27dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="51dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintRight_toLeftOf="@+id/tv_high_temperature"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.13" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:textSize="21sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_imageView"
            android:layout_marginRight="7dp"
            app:layout_constraintVertical_bias="0.516"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_weather_description"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="20sp"

            android:textColor="@color/white"
            app:layout_constraintRight_toLeftOf="@+id/tv_low_temperature"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_imageView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.133" />

        <TextView
            android:id="@+id/tv_high_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="74dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/tv_low_temperature"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_high_temperature"
            android:layout_marginRight="54dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
